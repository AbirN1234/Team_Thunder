    <link rel="stylesheet" href="form.css">
    <link rel="stylesheet" href="template1.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <div class="container" id="createResume">
        <div class="row mt-4">
            <div class="col-4 bg-transparent mt-3">
                <a href="/">
                    <button class="btn btn-outline-primary" style="font-size: 25px;">
                        <i class="fa fa-home" aria-hidden="true"></i>
                    </button>
                </a>
            </div>
            <div class="col-8">
                <span class="font-weight-bold" style="font-size: 45px;">
                    Resume Generator
                </span>
            </div>
        </div>
        <div class="row justify-content-center my-3 format">
            <div class="col-11 text-center">
                <header class="text-center rounded-pill bg-primary fs-3 fw-bold text-light">Personal Details</header>
            </div>
            <div class="col-10 mt-2">
                <div class="row justify-content-evenly mb-2">
                    <div class="col-sm-3 fs-5">Name:</div>
                    <div class="col-sm-9"><input type="text" name="name" id="name" class="form-control" required></div>
                </div>
                <div class="row justify-content-evenly mb-2">
                    <div class="col-sm-3 fs-5">Email Address:</div>
                    <div class="col-sm-9"><input type="email" name="email" id="email" class="form-control" required></div>
                </div>
                <div class="row justify-content-evenly mb-2">
                    <div class="col-sm-3 fs-5">Address:</div>
                    <div class="col-sm-9"><textarea name="Address" id="address" cols="30" rows="5" class="form-control" required></textarea></div>
                </div>
                <div class="row justify-content-evenly mb-2">
                    <div class="col-sm-3 fs-5">Contect No:</div>
                    <div class="col-sm-9"><input type="number" name="contect" id="contact" class="form-control" required></div>
                </div>
                <div class="row justify-content-evenly mb-2">
                    <div class="col-sm-3 fs-5">Linkedin:</div>
                    <div class="col-sm-9"><input type="url" name="linkedin" id="linkedin" class="form-control"></div>
                </div>
                <div class="row justify-content-evenly mb-2">
                    <div class="col-sm-3 fs-5">Github:</div>
                    <div class="col-sm-9"><input type="url" name="git" id="git" class="form-control"></div>
                </div>
            </div>
        </div>
        <div class="row justify-content-center my-3 format">
            <div class="col-11 text-center">
                <header class="text-center rounded-pill bg-primary fs-3 fw-bold text-light">Professional Details</header>
            </div>
            <div class="col-10 mt-2">
                <div class="row justify-content-evenly mb-2">
                    <div class="col-sm-3 fs-5">Objective:</div>
                    <div class="col-sm-9"><textarea name="objective" id="objective" cols="30" rows="5" class="form-control" required></textarea></div>
                </div>
                <div class="row justify-content-evenly mb-2">
                    <div class="col-sm-3 fs-5">Work Experience:</div>
                    <div class="col-sm-9">
                        <div class="row justify-content-center">
                            <div class="col-12 mb-2"><input type="text" name="exp1" id="exp1" class="form-control"></div>
                        </div>
                    </div>
                </div>
                <div class="row justify-content-evenly mb-2">
                    <div class="col-sm-3 fs-5">Academic Qualification:</div>
                    <div class="col-sm-9">
                        <div class="row justify-content-center">
                            <div class="col-12 mb-2"><input type="text" name="q1" id="q1" class="form-control" required></div>
                        </div>
                    </div>
                </div>
                <div class="row justify-content-evenly mb-2">
                    <div class="col-sm-3 fs-5">Skills:</div>
                    <div class="col-sm-9"><textarea name="skill" id="skill" cols="30" rows="3" class="form-control" required></textarea></div>
                </div>
                <div class="row justify-content-evenly mb-2">
                    <div class="col-sm-3 fs-5">Language:</div>
                    <div class="col-sm-9"><textarea name="lang" id="lang" cols="30" rows="2" class="form-control" required></textarea></div>
                </div>
            </div>
        </div>
        <div class="row justify-content-center mb-2">
            <div class="col-3 text-center">
                <button class="btn btn-success rounded-pill" onclick="insertData()" data-toggle="modal" data-target="#myModal">Generate Resume</button>
            </div>
        </div>
    </div>




    <div class="modal fade" id="myModal">
        <div class="modal-dialog modal-xl modal-dialog-centered">
          <div class="modal-content">
          
            <!-- Modal Header -->
            <div class="modal-header">
              <h4 class="modal-title">Your Resume</h4>
              <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            
            <!-- Modal body -->
            <div class="modal-body">
             

                <div class="container mt-5 pb-2" style="min-height: 100vh;" id="showResume">
                    <div id="invoice">
                    <div class="row justify-content-center">
                        <div class="col-10 text-center border-bottom border-2 border-dark mt-4">
                            <!-- <img class="rounded-circle" src="defaultUser.png" alt="" style="height: 200px; width: 200px;"> -->
                            <p class="fs-3 fw-bold" id="name1"></p>
                        </div>
                    </div>
                    <div class="row justify-content-center mt-2 text-break">
                        <div class="col-sm-4 ms-1 me-5 border">
                            <header class="text-center fs-5 mb-1 rounded-pill">Profile</header>
                            <div class="row justify-content-center mb-1">
                                <div class="col-sm-3">Name: </div>
                                <div class="col-sm-8" id="name2"> </div>
                            </div>
                            <div class="row justify-content-center mb-1">
                                <div class="col-sm-3">Address:</div>
                                <div class="col-sm-8" id="address1">User Details Address</div>
                            </div>
                            <div class="row justify-content-center mb-1">
                                <div class="col-sm-3">Email:</div>
                                <div class="col-sm-8" id="email1">user@mail.com</div>
                            </div>
                            <div class="row justify-content-center mb-1">
                                <div class="col-sm-3">Phone:</div>
                                <div class="col-sm-8" id="contact1">9876504321</div>
                            </div>
                            <div class="row justify-content-center mb-1">
                                <div class="col-sm-3">Linkedin:</div>
                                <div class="col-sm-8" id="linkedin1">https://www.linkedin.com</div>
                            </div>
                            <div class="row justify-content-center mb-1">
                                <div class="col-sm-3">Github:</div>
                                <div class="col-sm-8" id="git1">https://www.linkedin.com</div>
                            </div>
                        </div>
                        <div class="col-sm-5 border">
                            <header class="text-center fs-5 mb-1 rounded-pill">Academic Details</header>
                            <div class="row text-center">
                                <div class="col-11" id="q11">Graduation, Higher Secondary, Secondary</div>
                            </div>
                        </div>
                    </div>
                    <div class="row justify-content-center mt-2">
                        <div class="col-sm-4 ms-1 me-5">
                            <header class="text-center fs-5 mb-1 rounded-pill">Objective</header>
                            <div class="row text-center">
                                <div class="col-11" id="objective1">User future objective</div>
                            </div>
                        </div>
                        <div class="col-sm-5">
                            <header class="text-center fs-5 mb-1 rounded-pill">Skills</header>
                            <div class="row text-center">
                                <div class="col-11" id="skill1">All user skills</div>
                            </div>
                        </div>
                    </div>
                    <div class="row justify-content-center mt-2">
                        <div class="col-sm-4 ms-1 me-5">
                            <header class="text-center fs-5 mb-1 rounded-pill">Languages</header>
                            <div class="row text-center">
                                <div class="col-11" id="lang1">User Languages</div>
                            </div>
                        </div>
                        <div class="col-sm-5">
                            <header class="text-center fs-5 mb-1 rounded-pill">Work Experience</header>
                            <div class="col-11 text-center" id="exp11">Work experience of User</div>
                        </div>
                    </div>
                </div>
                    <div class="row justify-content-center mt-3 mb-3">
                        <div class="col-4 text-center">
                            <button class="btn btn-success rounded-pill" id="pdf">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-download" viewBox="0 0 16 16">
                                    <path d="M.5 9.9a.5.5 0 0 1 .5.5v2.5a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1v-2.5a.5.5 0 0 1 1 0v2.5a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2v-2.5a.5.5 0 0 1 .5-.5z"/>
                                    <path d="M7.646 11.854a.5.5 0 0 0 .708 0l3-3a.5.5 0 0 0-.708-.708L8.5 10.293V1.5a.5.5 0 0 0-1 0v8.793L5.354 8.146a.5.5 0 1 0-.708.708l3 3z"/>
                                </svg>
                                Download
                            </button>
                        </div>
                    </div>
                </div>





            </div>
            
            <!-- Modal footer -->
            <div class="modal-footer">
              <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>
            
          </div>
        </div>
      </div>







    









    <script>
        document.getElementById('pdf').onclick= function(){
            const element= document.getElementById('invoice');
            html2pdf().from(element).save();
        }

        function insertData() {
            var name = document.getElementById("name").value;
            var email = document.getElementById("email").value;
            var address = document.getElementById("address").value;
            var contact = document.getElementById("contact").value;
            var linkedin = document.getElementById("linkedin").value;
            var git = document.getElementById("git").value;
            var objective = document.getElementById("objective").value;
            var exp1 = document.getElementById("exp1").value;
            var q1 = document.getElementById("q1").value;
            var skill = document.getElementById("skill").value;
            var lang = document.getElementById("lang").value;

            document.getElementById("name1").innerHTML=name;
            document.getElementById("name2").innerHTML=name;
            document.getElementById("email1").innerHTML=email;
            document.getElementById("address1").innerHTML=address;
            document.getElementById("contact1").innerHTML=contact;
            document.getElementById("linkedin1").innerHTML=linkedin;
            document.getElementById("git1").innerHTML=git;
            document.getElementById("objective1").innerHTML=objective;
            document.getElementById("exp11").innerHTML=exp1;
            document.getElementById("q11").innerHTML=q1;
            document.getElementById("skill1").innerHTML=skill;
            document.getElementById("lang1").innerHTML=lang;
        }

    </script>
    

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.min.js" integrity="sha384-Atwg2Pkwv9vp0ygtn1JAojH0nYbwNJLPhwyoVbhoPwBhjQPR5VtM2+xf0Uwh9KtT" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.min.js" integrity="sha384-Atwg2Pkwv9vp0ygtn1JAojH0nYbwNJLPhwyoVbhoPwBhjQPR5VtM2+xf0Uwh9KtT" crossorigin="anonymous"></script>
